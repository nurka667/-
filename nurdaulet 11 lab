import math
from datetime import datetime


class Person:
    """–ë–∞–∑–æ–≤—ã–π –∫–ª–∞—Å—Å –¥–ª—è –≤—Å–µ—Ö –ø–µ—Ä—Å–æ–Ω"""
    
    def __init__(self, name, age):
        self._name = name
        self._age = age
        self._created_at = datetime.now()
    
    @property
    def name(self):
        return self._name
    
    @property
    def age(self):
        return self._age
    
    def display_info(self):
        print(f"üë§ –ò–º—è: {self._name}, –í–æ–∑—Ä–∞—Å—Ç: {self._age}")
    
    def __str__(self):
        return f"{self._name} ({self._age} –ª–µ—Ç)"


class Student(Person):
    """–ö–ª–∞—Å—Å —Å—Ç—É–¥–µ–Ω—Ç–∞"""
    
    def __init__(self, name, age, student_id, major, gpa=0.0):
        super().__init__(name, age)
        self.student_id = student_id
        self.major = major
        self.gpa = gpa
        self.courses = []
    
    def display_info(self):
        print(f"üéì –°—Ç—É–¥–µ–Ω—Ç: {self._name}, ID: {self.student_id}")
        print(f"   –°–ø–µ—Ü–∏–∞–ª—å–Ω–æ—Å—Ç—å: {self.major}, GPA: {self.gpa:.2f}")
    
    def add_course(self, course_name):
        self.courses.append(course_name)
        print(f"‚úÖ {self._name} –∑–∞–ø–∏—Å–∞–Ω –Ω–∞ –∫—É—Ä—Å: {course_name}")
    
    def study(self):
        print(f"üìö {self._name} —É—á–∏—Ç—Å—è –ø–æ —Å–ø–µ—Ü–∏–∞–ª—å–Ω–æ—Å—Ç–∏ {self.major}")

class Teacher(Person):
    """–ö–ª–∞—Å—Å –ø—Ä–µ–ø–æ–¥–∞–≤–∞—Ç–µ–ª—è"""
    
    def __init__(self, name, age, department, salary):
        super().__init__(name, age)
        self.department = department
        self.salary = salary
        self.subjects = []
    
    def display_info(self):
        print(f"üë®‚Äçüè´ –ü—Ä–µ–ø–æ–¥–∞–≤–∞—Ç–µ–ª—å: {self._name}, –ö–∞—Ñ–µ–¥—Ä–∞: {self.department}")
        print(f"   –ó–∞—Ä–ø–ª–∞—Ç–∞: {self.salary}‚Ç∏")
    
    def add_subject(self, subject):
        self.subjects.append(subject)
        print(f"üìñ {self._name} –ø—Ä–µ–ø–æ–¥–∞–µ—Ç: {subject}")
    
    def teach(self):
        print(f"üéØ {self._name} –ø—Ä–æ–≤–æ–¥–∏—Ç –ª–µ–∫—Ü–∏—é")


class Researcher:
    """–ö–ª–∞—Å—Å –∏—Å—Å–ª–µ–¥–æ–≤–∞—Ç–µ–ª—è"""
    
    def __init__(self, research_area):
        self.research_area = research_area
        self.publications = []
    
    def conduct_research(self):
        print(f"üî¨ –ü—Ä–æ–≤–æ–¥–∏—Ç –∏—Å—Å–ª–µ–¥–æ–≤–∞–Ω–∏–µ –≤ –æ–±–ª–∞—Å—Ç–∏: {self.research_area}")
    
    def publish_paper(self, paper_title):
        self.publications.append(paper_title)
        print(f"üìÑ –û–ø—É–±–ª–∏–∫–æ–≤–∞–Ω–∞ —Å—Ç–∞—Ç—å—è: '{paper_title}'")

class Professor(Teacher, Researcher):
    """–ö–ª–∞—Å—Å –ø—Ä–æ—Ñ–µ—Å—Å–æ—Ä–∞"""
    
    def __init__(self, name, age, department, salary, research_area):
        Teacher.__init__(self, name, age, department, salary)
        Researcher.__init__(self, research_area)
        self.rank = "–ü—Ä–æ—Ñ–µ—Å—Å–æ—Ä"
    
    def display_info(self):
        print(f"üé© {self.rank}: {self._name}")
        print(f"   –ö–∞—Ñ–µ–¥—Ä–∞: {self.department}, –û–±–ª–∞—Å—Ç—å –∏—Å—Å–ª–µ–¥–æ–≤–∞–Ω–∏–π: {self.research_area}")
    
    def work(self):
        self.teach()
        self.conduct_research()


class Shape:
    """–ë–∞–∑–æ–≤—ã–π –∫–ª–∞—Å—Å –¥–ª—è –≥–µ–æ–º–µ—Ç—Ä–∏—á–µ—Å–∫–∏—Ö —Ñ–∏–≥—É—Ä"""
    
    def area(self):
        raise NotImplementedError("–ú–µ—Ç–æ–¥ area –¥–æ–ª–∂–µ–Ω –±—ã—Ç—å –ø–µ—Ä–µ–æ–ø—Ä–µ–¥–µ–ª–µ–Ω")
    
    def perimeter(self):
        raise NotImplementedError("–ú–µ—Ç–æ–¥ perimeter –¥–æ–ª–∂–µ–Ω –±—ã—Ç—å –ø–µ—Ä–µ–æ–ø—Ä–µ–¥–µ–ª–µ–Ω")
    
    def display_info(self):
        print(f"üìê –§–∏–≥—É—Ä–∞: {self.__class__.__name__}")
        print(f"   –ü–ª–æ—â–∞–¥—å: {self.area():.2f}, –ü–µ—Ä–∏–º–µ—Ç—Ä: {self.perimeter():.2f}")

class Circle(Shape):
    def __init__(self, radius):
        self.radius = radius
    
    def area(self):
        return math.pi * self.radius ** 2
    
    def perimeter(self):
        return 2 * math.pi * self.radius

class Rectangle(Shape):
    def __init__(self, width, height):
        self.width = width
        self.height = height
    
    def area(self):
        return self.width * self.height
    
    def perimeter(self):
        return 2 * (self.width + self.height)

class Triangle(Shape):
    def __init__(self, side_a, side_b, side_c):
        self.side_a = side_a
        self.side_b = side_b
        self.side_c = side_c
    
    def area(self):
        s = self.perimeter() / 2
        return math.sqrt(s * (s - self.side_a) * (s - self.side_b) * (s - self.side_c))
    
    def perimeter(self):
        return self.side_a + self.side_b + self.side_c


def main():
    print("=" * 50)
    print("–î–ï–ú–û–ù–°–¢–†–ê–¶–ò–Ø –û–û–ü –í PYTHON")
    print("=" * 50)
    
    # –°–æ–∑–¥–∞–Ω–∏–µ –æ–±—ä–µ–∫—Ç–æ–≤
    student1 = Student("–ê–π–≥–µ—Ä–∏–º", 20, "ST2024", "–ö–æ–º–ø—å—é—Ç–µ—Ä–Ω—ã–µ –Ω–∞—É–∫–∏", 3.8)
    student2 = Student("–ê—Ä–º–∞–Ω", 21, "ST2025", "–ò–Ω–∂–µ–Ω–µ—Ä–∏—è", 3.5)
    teacher = Teacher("–ì—É–ª—å–Ω–∞—Ä–∞", 45, "–ú–∞—Ç–µ–º–∞—Ç–∏–∫–∞", 250000)
    professor = Professor("–ê–ª–∏—à–µ—Ä", 50, "–ò–Ω—Ñ–æ—Ä–º–∞—Ç–∏–∫–∞", 400000, "–ò—Å–∫—É—Å—Å—Ç–≤–µ–Ω–Ω—ã–π –∏–Ω—Ç–µ–ª–ª–µ–∫—Ç")
    
    # –ù–∞—Å–ª–µ–¥–æ–≤–∞–Ω–∏–µ
    print("\n1. –ù–ê–°–õ–ï–î–û–í–ê–ù–ò–ï:")
    print("-" * 30)
    for person in [student1, student2, teacher, professor]:
        person.display_info()
        print()
    
    # –ü–æ–ª–∏–º–æ—Ä—Ñ–∏–∑–º —Å —Ñ–∏–≥—É—Ä–∞–º–∏
    print("\n2. –ü–û–õ–ò–ú–û–†–§–ò–ó–ú –° –§–ò–ì–£–†–ê–ú–ò:")
    print("-" * 30)
    for shape in [Circle(5), Rectangle(4, 6), Triangle(3, 4, 5)]:
        shape.display_info()
        print()
    
    # –í–∑–∞–∏–º–æ–¥–µ–π—Å—Ç–≤–∏–µ –æ–±—ä–µ–∫—Ç–æ–≤
    print("\n3. –í–ó–ê–ò–ú–û–î–ï–ô–°–¢–í–ò–ï –û–ë–™–ï–ö–¢–û–í:")
    print("-" * 30)
    student1.add_course("–ü—Ä–æ–≥—Ä–∞–º–º–∏—Ä–æ–≤–∞–Ω–∏–µ –Ω–∞ Python")
    student1.add_course("–ë–∞–∑—ã –¥–∞–Ω–Ω—ã—Ö")
    student1.study()
    
    print()
    teacher.add_subject("–í—ã—Å—à–∞—è –º–∞—Ç–µ–º–∞—Ç–∏–∫–∞")
    teacher.teach()
    
    print()
    professor.work()
    professor.publish_paper("–ù–æ–≤—ã–µ –º–µ—Ç–æ–¥—ã –º–∞—à–∏–Ω–Ω–æ–≥–æ –æ–±—É—á–µ–Ω–∏—è")
    
    # –ò–Ω—Ñ–æ—Ä–º–∞—Ü–∏—è –æ —Å—Ç—É–¥–µ–Ω—Ç–∞—Ö
    print("\n4. –ò–ù–§–û–†–ú–ê–¶–ò–Ø –û –°–¢–£–î–ï–ù–¢–ê–•:")
    print("-" * 30)
    for student in [student1, student2]:
        print(f"{student.name} (–≤–æ–∑—Ä–∞—Å—Ç: {student.age}) - {student.major}")
    
    print("\n" + "=" * 50)
    print("–î–ï–ú–û–ù–°–¢–†–ê–¶–ò–Ø –ó–ê–í–ï–†–®–ï–ù–ê!")
    print("=" * 50)

if __name__ == "__main__":
    main()
