
def read_file(file_path):
    """–ß—Ç–µ–Ω–∏–µ —Ñ–∞–π–ª–∞ –∏ –≤—ã–≤–æ–¥ —Å–æ–¥–µ—Ä–∂–∏–º–æ–≥–æ"""
    try:
        with open(file_path, 'r', encoding='utf-8') as file:
            content = file.read()
            print("–°–æ–¥–µ—Ä–∂–∏–º–æ–µ —Ñ–∞–π–ª–∞:\n")
            print(content)
    except FileNotFoundError:
        print(f"‚ùå –û—à–∏–±–∫–∞: —Ñ–∞–π–ª '{file_path}' –Ω–µ –Ω–∞–π–¥–µ–Ω.")
    except IOError as e:
        print(f"‚ùå –û—à–∏–±–∫–∞ –ø—Ä–∏ —á—Ç–µ–Ω–∏–∏ —Ñ–∞–π–ª–∞: {e}")

def write_to_file(filename, text):
    """–ó–∞–ø–∏—Å—ã–≤–∞–µ—Ç —Ç–µ–∫—Å—Ç –≤ —Ñ–∞–π–ª"""
    try:
        with open(filename, 'w', encoding='utf-8') as file:
            file.write(text)
        print(f"‚úÖ –¢–µ–∫—Å—Ç —É—Å–ø–µ—à–Ω–æ –∑–∞–ø–∏—Å–∞–Ω –≤ {filename}")
    except IOError as e:
        print(f"‚ùå –û—à–∏–±–∫–∞ –ø—Ä–∏ –∑–∞–ø–∏—Å–∏ –≤ —Ñ–∞–π–ª: {e}")

def read_from_file(filename):
    """–ß—Ç–µ–Ω–∏–µ –∏ –≤—ã–≤–æ–¥ —Å–æ–¥–µ—Ä–∂–∏–º–æ–≥–æ —Ñ–∞–π–ª–∞"""
    try:
        with open(filename, 'r', encoding='utf-8') as file:
            content = file.read()
            print(f"–°–æ–¥–µ—Ä–∂–∏–º–æ–µ —Ñ–∞–π–ª–∞ '{filename}':\n{content}")
    except FileNotFoundError:
        print(f"‚ùå –û—à–∏–±–∫–∞: —Ñ–∞–π–ª '{filename}' –Ω–µ –Ω–∞–π–¥–µ–Ω.")


class NegativeNumberError(Exception):
    """–ü–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å—Å–∫–æ–µ –∏—Å–∫–ª—é—á–µ–Ω–∏–µ –¥–ª—è –æ—Ç—Ä–∏—Ü–∞—Ç–µ–ª—å–Ω—ã—Ö —á–∏—Å–µ–ª"""
    def __init__(self, number):
        super().__init__(f"‚ùå –û—à–∏–±–∫–∞: —á–∏—Å–ª–æ {number} –æ—Ç—Ä–∏—Ü–∞—Ç–µ–ª—å–Ω–æ–µ! –í–≤–µ–¥–∏—Ç–µ –ø–æ–ª–æ–∂–∏—Ç–µ–ª—å–Ω–æ–µ —á–∏—Å–ª–æ.")

def divide_numbers():
    """–î–µ–ª–µ–Ω–∏–µ –¥–≤—É—Ö —á–∏—Å–µ–ª —Å –æ–±—Ä–∞–±–æ—Ç–∫–æ–π –∏—Å–∫–ª—é—á–µ–Ω–∏–π"""
    try:
        a = float(input("–í–≤–µ–¥–∏—Ç–µ –ø–µ—Ä–≤–æ–µ —á–∏—Å–ª–æ: "))
        b = float(input("–í–≤–µ–¥–∏—Ç–µ –≤—Ç–æ—Ä–æ–µ —á–∏—Å–ª–æ: "))
        result = a / b
    except ValueError:
        print("‚ùå –û—à–∏–±–∫–∞: –≤–≤–µ–¥–µ–Ω–æ –Ω–µ —á–∏—Å–ª–æ.")
    except ZeroDivisionError:
        print("‚ùå –û—à–∏–±–∫–∞: –¥–µ–ª–µ–Ω–∏–µ –Ω–∞ –Ω–æ–ª—å –Ω–µ–≤–æ–∑–º–æ–∂–Ω–æ.")
    else:
        print(f"–†–µ–∑—É–ª—å—Ç–∞—Ç –¥–µ–ª–µ–Ω–∏—è: {result}")
    finally:
        print("üîπ –ü—Ä–æ–≥—Ä–∞–º–º–∞ –∑–∞–≤–µ—Ä—à–µ–Ω–∞.")

def check_positive(number):
    """–ü—Ä–æ–≤–µ—Ä–∫–∞ —á–∏—Å–ª–∞ –Ω–∞ –ø–æ–ª–æ–∂–∏—Ç–µ–ª—å–Ω–æ—Å—Ç—å"""
    if number < 0:
        raise NegativeNumberError(number)
    print(f"‚úÖ –ß–∏—Å–ª–æ {number} –∫–æ—Ä—Ä–µ–∫—Ç–Ω–æ!")


from file_utils import read_file, write_to_file, read_from_file
from exceptions_demo import divide_numbers, check_positive, NegativeNumberError

def task_files_demo():
    print("\n=== TASK 1 & 2: –†–∞–±–æ—Ç–∞ —Å —Ñ–∞–π–ª–∞–º–∏ ===")
    sample_file = "sample.txt"
    example_file = "example.txt"
    
    # Task 1: –ß—Ç–µ–Ω–∏–µ —Ñ–∞–π–ª–∞
    read_file(sample_file)
    
    # Task 2: –ó–∞–ø–∏—Å—å –∏ —á—Ç–µ–Ω–∏–µ —Ñ–∞–π–ª–∞
    text = "Ernur Esimuly"
    write_to_file(example_file, text)
    read_from_file(example_file)

def task_exceptions_demo():
    print("\n=== TASK 3: –ò—Å–∫–ª—é—á–µ–Ω–∏—è –ø—Ä–∏ –¥–µ–ª–µ–Ω–∏–∏ ===")
    divide_numbers()
    
    print("\n=== TASK 4: –ü–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å—Å–∫–æ–µ –∏—Å–∫–ª—é—á–µ–Ω–∏–µ ===")
    try:
        num = float(input("–í–≤–µ–¥–∏—Ç–µ —á–∏—Å–ª–æ: "))
        check_positive(num)
    except ValueError:
        print("‚ùå –û—à–∏–±–∫–∞: –≤–≤–µ–¥–µ–Ω–æ –Ω–µ —á–∏—Å–ª–æ.")
    except NegativeNumberError as e:
        print(e)

if __name__ == "__main__":
    task_files_demo()
    task_exceptions_demo()
